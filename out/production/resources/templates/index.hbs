{{#partial "content"}}

    <h1>List of Bags!</h1>

    {{#if backpackings}}
        {{#each backpackings }}
         <div class="emphasized well">
            <p>Backpack {{id}}:</p>
               <ul>
                   <li>{{activity}}</li>
                   <li>Created At: {{createdAt}}</li>
                    <li>{{item}}</li>
                        <ul>
                            <li>Item name: {{name}}</li>
                            <li>Item cost: {{cost}}</li>
                            <li>Item weight: {{weight}}</li>
                            <li>Item brand: {{brand}}</li>
                         </ul>
               </ul>
            <p>{{ name }} <a href="/backpacking/{{id}}">read more...</a></p>
         </div>
        {{/each}}
    {{else}}
        <p>No bag added!</p>
    {{/if}}

    //this is filled with items, so use item methods
    {{#each myBackpack}} //this is the key for the model.put HashMap
         <ul>
            <li>Item name: {{name}}</li> //these are getters for the item class
            <li>Item cost: {{cost}}</li>
            <li>Item weight: {{weight}}</li>
            <li>Item brand: {{brand}}</li>
         </ul>
    {{/each}}



{{/partial}}

{{> layout.hbs}}